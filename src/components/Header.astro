---
import IconX from '@/assets/icons/IconX.svg';
import IconMoon from '@/assets/icons/IconMoon.svg';
import IconSearch from '@/assets/icons/IconSearch.svg';
import IconArchive from '@/assets/icons/IconArchive.svg';
import IconSunHigh from '@/assets/icons/IconSunHigh.svg';
import IconMenuDeep from '@/assets/icons/IconMenuDeep.svg';
import LinkButton from './LinkButton.astro';
import LanguagePicker from './LanguagePicker.astro';
import { SITE } from '@/config';
import {
  useTranslations,
  getCurrentLocale,
  stripLocalePrefix,
  getLocalizedHref,
} from '@/utils/i18n';

const locale = getCurrentLocale(Astro);
const t = useTranslations(locale);

const { pathname } = Astro.url;

/**
 * Check if the given path is active.
 * @param path - The target path to check (e.g., 'posts', 'tags', '/')
 */
const isActive = (path: string) => {
  // 1. 获取当前去掉语言前缀的路径
  const currentCleanPath = stripLocalePrefix(pathname);

  // 2. 处理目标路径：如果是根路径 '/'，直接比较
  if (path === '/' || path === '') {
    return currentCleanPath === '/';
  }

  // 3. 处理子路径：判断当前路径是否以目标路径开头
  // 例如：当前是 /posts/my-post，目标是 posts，则返回 true
  const targetCleanPath = path.replace(/^\//, '').replace(/\/$/, '');
  const pathSegments = currentCleanPath.split('/').filter(Boolean);

  return pathSegments[0] === targetCleanPath;
};
---

<a
  id="skip-to-content"
  href="#main-content"
  class="absolute start-16 -top-full z-50 bg-background px-3 py-2 text-accent backdrop-blur-lg transition-all focus:top-4"
>
  {t('nav.skipContent')}
</a>

<header class="app-layout flex flex-col items-center justify-between sm:flex-row">
  <div
    id="top-nav-wrap"
    class:list={[
      'py-4 sm:py-6',
      'border-b border-border',
      'relative w-full bg-background',
      'flex items-baseline justify-between sm:items-center',
    ]}
  >
    <a
      href={getLocalizedHref(locale, '/')}
      class="absolute py-1 text-xl leading-8 font-semibold whitespace-nowrap sm:static sm:my-auto sm:text-2xl sm:leading-none"
    >
      {t('site.title')}
    </a>
    <nav
      id="nav-menu"
      class="flex w-full flex-col items-center sm:ms-2 sm:flex-row sm:justify-end sm:space-x-4 sm:py-0"
    >
      <button
        id="menu-btn"
        class="focus-outline self-end p-2 sm:hidden"
        aria-label={t('nav.openMenu')}
        aria-expanded="false"
        aria-controls="menu-items"
        data-open-label={t('nav.openMenu')}
        data-close-label={t('nav.closeMenu')}
      >
        <IconX id="close-icon" class="hidden" />
        <IconMenuDeep id="menu-icon" />
      </button>
      <ul
        id="menu-items"
        class:list={[
          'mt-4 grid w-44 grid-cols-2 place-content-center gap-2',
          '[&>li>a]:block [&>li>a]:px-4 [&>li>a]:py-3 [&>li>a]:text-center [&>li>a]:font-medium [&>li>a]:hover:text-accent sm:[&>li>a]:px-2 sm:[&>li>a]:py-1',
          'hidden',
          'sm:mt-0 sm:flex sm:w-auto sm:gap-x-5 sm:gap-y-0',
        ]}
      >
        <li class="col-span-2">
          <a
            href={getLocalizedHref(locale, 'posts')}
            class:list={{ 'active-nav': isActive('posts') }}
          >
            {t('nav.posts')}
          </a>
        </li>
        <li class="col-span-2">
          <a
            href={getLocalizedHref(locale, 'tags')}
            class:list={{ 'active-nav': isActive('tags') }}
          >
            {t('nav.tags')}
          </a>
        </li>
        <li class="col-span-2">
          <a
            href={getLocalizedHref(locale, 'about')}
            class:list={{ 'active-nav': isActive('about') }}
          >
            {t('nav.about')}
          </a>
        </li>
        {
          SITE.showArchives && (
            <li class="col-span-2">
              <LinkButton
                href={getLocalizedHref(locale, 'archives')}
                class:list={[
                  'focus-outline flex justify-center p-3 sm:p-1',
                  {
                    'active-nav [&>svg]:stroke-accent': isActive('archives'),
                  },
                ]}
                title={t('nav.archives')}
                aria-label={t('nav.archives')}
              >
                <IconArchive class="hidden sm:inline-block" />
                <span class="sm:sr-only">{t('nav.archives')}</span>
              </LinkButton>
            </li>
          )
        }
        <li class="col-span-1 flex items-center justify-center">
          <LinkButton
            href={getLocalizedHref(locale, 'search')}
            class:list={[
              'focus-outline flex p-3 sm:p-1',
              { '[&>svg]:stroke-accent': isActive('search') },
            ]}
            title={t('nav.search')}
            aria-label={t('nav.search')}
          >
            <IconSearch />
            <span class="sr-only">{t('nav.search')}</span>
          </LinkButton>
        </li>
        {
          SITE.lightAndDarkMode && (
            <li class="col-span-1 flex items-center justify-center">
              <button
                id="theme-btn"
                class="focus-outline relative size-12 p-4 sm:size-8 hover:[&>svg]:stroke-accent"
                title={t('nav.theme')}
                aria-label="auto"
                aria-live="polite"
              >
                <IconMoon class="absolute top-[50%] left-[50%] -translate-[50%] scale-100 rotate-0 transition-all dark:scale-0 dark:-rotate-90" />
                <IconSunHigh class="absolute top-[50%] left-[50%] -translate-[50%] scale-0 rotate-90 transition-all dark:scale-100 dark:rotate-0" />
              </button>
            </li>
          )
        }
        <li class="col-span-2 flex items-center justify-center sm:col-span-1 sm:ms-2">
          <LanguagePicker />
        </li>
      </ul>
    </nav>
  </div>
</header>

<script>
  function setupHeader() {
    const menuBtn = document.querySelector('#menu-btn');
    const menuItems = document.querySelector('#menu-items');
    const menuIcon = document.querySelector('#menu-icon');
    const closeIcon = document.querySelector('#close-icon');

    if (!menuBtn || !menuItems || !menuIcon || !closeIcon) return;

    // Reset state on load
    menuBtn.setAttribute('aria-expanded', 'false');
    menuItems.classList.add('hidden');
    menuIcon.classList.remove('hidden');
    closeIcon.classList.add('hidden');

    const openLabel = menuBtn.getAttribute('data-open-label') || 'Open';
    const closeLabel = menuBtn.getAttribute('data-close-label') || 'Close';

    menuBtn.addEventListener('click', () => {
      const isExpanded = menuBtn.getAttribute('aria-expanded') === 'true';
      const nextState = !isExpanded;

      menuBtn.setAttribute('aria-expanded', String(nextState));
      menuBtn.setAttribute('aria-label', nextState ? closeLabel : openLabel);

      menuItems.classList.toggle('hidden', !nextState);
      menuIcon.classList.toggle('hidden', nextState);
      closeIcon.classList.toggle('hidden', !nextState);
    });
  }

  setupHeader();
  document.addEventListener('astro:after-swap', setupHeader);
</script>
