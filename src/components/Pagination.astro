---
import type { Page } from 'astro';
import type { CollectionEntry } from 'astro:content';
import IconArrowLeft from '@/assets/icons/IconArrowLeft.svg';
import IconArrowRight from '@/assets/icons/IconArrowRight.svg';
import LinkButton from './LinkButton.astro';
import { useTranslations } from '@/utils/i18n';
import { DEFAULT_LOCALE } from '@/constants';
import type { Locale } from '@/types/i18n';

type Props = {
  page: Page<CollectionEntry<'blog'>>;
};

const { page } = Astro.props;

const locale = (Astro.currentLocale || DEFAULT_LOCALE) as Locale;
const t = useTranslations(locale);
---

{
  page.lastPage > 1 && (
    <nav
      class="mt-auto mb-8 flex justify-center"
      role="navigation"
      aria-label={t('pagination.nav')}
    >
      <LinkButton
        disabled={!page.url.prev}
        href={page.url.prev as string}
        class:list={['me-4 select-none', { 'opacity-50': !page.url.prev }]}
        aria-label={t('pagination.prevLabel')}
      >
        <IconArrowLeft class="inline-block rtl:rotate-180" />
        {t('pagination.prev')}
      </LinkButton>
      {page.currentPage} / {page.lastPage}
      <LinkButton
        disabled={!page.url.next}
        href={page.url.next as string}
        class:list={['ms-4 select-none', { 'opacity-50': !page.url.next }]}
        aria-label={t('pagination.nextLabel')}
      >
        {t('pagination.next')}
        <IconArrowRight class="inline-block rtl:rotate-180" />
      </LinkButton>
    </nav>
  )
}
