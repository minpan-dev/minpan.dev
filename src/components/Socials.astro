---
import { SOCIALS } from '@/constants';
import LinkButton from './LinkButton.astro';
import { useTranslations, getCurrentLocale } from '@/utils/i18n';

const locale = getCurrentLocale(Astro);
const t = useTranslations(locale);
---

<div class="flex flex-wrap items-center gap-1">
  {
    SOCIALS.map((social) => {
      const title = t(`social.${social.name.toLowerCase()}` as string);
      const href = social.name === 'Mail' ? `mailto:${social.href}` : social.href;
      return (
        <LinkButton href={href} class="p-2 hover:rotate-6 sm:p-1" title={title}>
          <social.icon class="inline-block size-6 scale-125 fill-transparent stroke-current stroke-2 opacity-90 group-hover:fill-transparent sm:scale-110" />
          <span class="sr-only">{title}</span>
        </LinkButton>
      );
    })
  }
</div>
